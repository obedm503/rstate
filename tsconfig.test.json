{
  "compilerOptions": {
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "noImplicitAny": false,
    "outDir": "./test/",
    "rootDir": "./src",
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "removeComments": true,
    "declaration": true,
    "noResolve": false,
    "moduleResolution": "node",
    "lib": [
      "es2015"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  },
  "compileOnSave": true
}
